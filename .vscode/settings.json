{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [100],
  "editor.formatOnSave": true,
  "files.encoding": "utf8",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/tsconfig.tsbuildinfo": false
  },
  "search.exclude": {
    "build/**": true,
    "node_modules/**": true,
    "package-lock.json": true
  },
  "editor.quickSuggestionsDelay": 1000,
  "typescript.suggest.completeJSDocs": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "eslint.autoFixOnSave": true,
  "eslint.validate": ["javascript", "typescript"],
  "eslint.workingDirectories": [
    "./apps/api",
    "./apps/client",
    "./packages/lib-api",
    "./packages/lib-core",
    "./packages/lib-web"
	],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "cSpell.words": [
    "compile",
    "csrf",
    "dataloader",
    "dev",
    "esbuild",
    "fastify",
    "hookscrane",
    "mercurius",
    "mimetype",
    "mixins",
    "nocache",
    "outdir",
    "pino",
    "postgres",
    "postgresql",
    "precompile",
    "precompiled",
    "prepend",
    "prisma",
    "prisma's",
    "resave",
    "respawn",
    "signup",
    "tsbuildinfo",
    "typebox",
    "typegen",
    "webp"
  ],
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    "./vscode/**",
    "./build/**"
  ]
}
