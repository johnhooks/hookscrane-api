{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/build/main.js",
      "preLaunchTask": "npm: build:esbuild",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "runtimeArgs": ["--require", "dotenv/config"],
      "sourceMaps": true
    }
  ]
}
