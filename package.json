{
  "name": "@johnhooks/hookscrane-api",
  "version": "0.1.0",
  "private": true,
  "main": "build/server/main.js",
  "author": "John Hooks <bitmachina@outlook.com>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "-r typescript-transform-paths/register build/server/main.js",
    "start:local": "node -r dotenv/config -r typescript-transform-paths/register build/server/main.js",
    "build": "npm run clean && npm run generate && npm run build:tsc",
    "build:swc": "swc src --out-dir build",
    "build:tsc": "tsc -b",
    "clean": "rm -rf build",
    "dev": "ts-node-dev --respawn --watch src -r dotenv/config -r typescript-transform-paths/register --transpile-only src/server/main.ts",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/server/schema",
    "db:push": "prisma db push --preview-feature",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/client": "2.27.x",
    "bcrypt": "^5.0.1",
    "cookie": "^0.4.1",
    "date-fns": "^2.23.0",
    "fastify": "^3.20.2",
    "fastify-plugin": "^3.0.0",
    "graphql": "^15.5.1",
    "graphql-scalars": "^1.10.0",
    "ioredis": "^4.27.7",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mercurius": "^8.1.1",
    "nexus": "^1.1.0",
    "nexus-prisma": "^0.30.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.46",
    "@swc/core": "^1.2.77",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.4.1",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.6.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "concurrently": "^6.2.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "pino-pretty": "^5.1.3",
    "prettier": "^2.3.2",
    "prisma": "2.27.x",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5",
    "typescript-transform-paths": "^3.3.0"
  }
}
